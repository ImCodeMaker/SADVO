@model CrearUsuarioViewModel

@{
    Layout = "_LayoutAdmin";
}

<div class="h-screen overflow-hidden">
    <section class="h-full overflow-y-auto bg-gradient-to-br from-slate-50 to-blue-50 p-6">
        <div class="max-w-2xl mx-auto bg-white rounded-xl shadow-lg p-8 border border-gray-100">
            @if (!ViewData.ModelState.IsValid &&
            ViewData.ModelState.TryGetValue(string.Empty, out var entry) &&
            entry?.Errors?.Count > 0)
            {
                <div class="bg-red-100 text-red-700 border border-red-400 px-4 py-3 rounded relative text-sm">
                    @foreach (var error in entry.Errors)
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }


            <!-- Título -->
            <div class="text-center mb-8">
                <h2 class="text-3xl font-bold text-gray-800 mb-2">Crear Usuario</h2>
                <p class="text-gray-500 text-sm">Rellena los siguientes campos para registrar un nuevo usuario.</p>
            </div>

            <form asp-action="Create" method="post" class="space-y-6">
                <!-- Nombre -->
                <div>
                    <label asp-for="Nombre" class="block text-sm font-medium text-gray-700 mb-1">Nombre</label>
                    <input asp-for="Nombre" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    <span asp-validation-for="Nombre" class="text-red-500 text-sm"></span>
                </div>

                <!-- Apellido -->
                <div>
                    <label asp-for="Apellido" class="block text-sm font-medium text-gray-700 mb-1">Apellido</label>
                    <input asp-for="Apellido" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    <span asp-validation-for="Apellido" class="text-red-500 text-sm"></span>
                </div>

                <!-- Email -->
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Correo Electrónico</label>
                    <input asp-for="Email" type="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>

                <!-- NombreUsuario -->
                <div>
                    <label asp-for="NombreUsuario" class="block text-sm font-medium text-gray-700 mb-1">Nombre de Usuario</label>
                    <input asp-for="NombreUsuario" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    <span asp-validation-for="NombreUsuario" class="text-red-500 text-sm"></span>
                </div>

                <!-- Contraseña -->
                <div>
                    <label asp-for="Contraseña" class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
                    <input asp-for="Contraseña" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    <span asp-validation-for="Contraseña" class="text-red-500 text-sm"></span>
                </div>

                <!-- Confirmar Contraseña -->
                <div>
                    <label asp-for="ConfirmarContraseña" class="block text-sm font-medium text-gray-700 mb-1">Confirmar Contraseña</label>
                    <input asp-for="ConfirmarContraseña" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    <span asp-validation-for="ConfirmarContraseña" class="text-red-500 text-sm"></span>
                </div>

                <!-- Botones -->
                <div class="flex justify-between items-center pt-4">
                    <a asp-action="Index" class="text-gray-600 hover:text-gray-800 transition-colors text-sm font-medium">
                        ← Volver a la lista
                    </a>
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium shadow transition-all duration-200">
                        Guardar Usuario
                    </button>
                </div>
            </form>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
