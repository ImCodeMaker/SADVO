@model CiudadanosViewModel

@{
    Layout = "_LayoutAdmin";
}

<div class="h-screen overflow-hidden">
    <section class="h-full overflow-y-auto bg-gradient-to-br from-slate-50 to-blue-50 p-6">
        <div class="max-w-2xl mx-auto bg-white rounded-xl shadow-lg p-8 border border-gray-100">
            <!-- Título -->
            <div class="text-center mb-8">
                <h2 class="text-3xl font-bold text-gray-800 mb-2">Editar Ciudadano</h2>
                <p class="text-gray-500 text-sm">Modifica los campos necesarios y guarda los cambios.</p>
            </div>

            <form asp-action="Edit" method="post" class="space-y-6">
                <input type="hidden" asp-for="Id" />

                <!-- Mostrar errores generales -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p class="text-sm">@error.ErrorMessage</p>
                        }
                    </div>
                }

                <!-- Nombre Completo -->
                <div>
                    <label asp-for="NombreCompleto" class="block text-sm font-medium text-gray-700 mb-1">Nombre Completo</label>
                    <input asp-for="NombreCompleto" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    <span asp-validation-for="NombreCompleto" class="text-red-500 text-sm"></span>
                </div>

                <!-- Cédula (Documento de Identidad) -->
                <div>
                    <label asp-for="Documento_Identidad" class="block text-sm font-medium text-gray-700 mb-1">Cédula</label>
                    <input asp-for="Documento_Identidad" type="text" placeholder="000-0000000-0" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    <span asp-validation-for="Documento_Identidad" class="text-red-500 text-sm"></span>
                </div>

                <!-- Correo Electrónico -->
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Correo Electrónico</label>
                    <input asp-for="Email" type="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>

                <!-- Botones -->
                <div class="flex justify-between items-center pt-4">
                    <a asp-action="Index" class="text-gray-600 hover:text-gray-800 transition-colors text-sm font-medium">
                        ← Volver a la lista
                    </a>
                    <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-lg font-medium shadow transition-all duration-200">
                        Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}