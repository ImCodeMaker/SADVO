@model ConfirmacionViewModel
@{
    ViewData["Title"] = "Confirmar Acción";
}

<div class="min-h-screen bg-gray-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
        <div class="bg-white rounded-xl shadow-2xl overflow-hidden p-6">
            <h2 class="text-xl font-semibold mb-4">@ViewData["Title"]</h2>
            <p class="mb-6">@Model.Mensaje</p>

            <form asp-action="@Model.Accion" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded mr-2">@Model.TituloBoton</button>
                <a asp-action="Index" class="bg-gray-300 px-4 py-2 rounded text-gray-700">Cancelar</a>
            </form>
        </div>
    </div>
</div>
