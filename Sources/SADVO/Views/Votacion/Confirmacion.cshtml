@{
    ViewData["Title"] = "Voto Confirmado";
}

<div class="min-h-screen bg-gradient-to-br from-green-50 via-white to-emerald-50">
    <!-- Header -->
    <div class="bg-white shadow-lg border-b border-gray-200">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="text-center">
                <h1 class="text-3xl font-bold text-gray-900">¡Voto Registrado Exitosamente!</h1>
                <p class="text-gray-600 mt-1">Su participación democrática ha sido confirmada</p>
            </div>
        </div>
    </div>

    <!-- Progress Indicator -->
    <div class="bg-white border-b border-gray-200">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="flex items-center space-x-4">
                <div class="flex items-center text-green-600">
                    <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center text-white text-sm font-medium">✓</div>
                    <span class="ml-2 font-medium">Seleccionar</span>
                </div>
                <div class="flex-1 border-t border-green-300"></div>
                <div class="flex items-center text-green-600">
                    <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center text-white text-sm font-medium">✓</div>
                    <span class="ml-2 font-medium">Confirmar</span>
                </div>
                <div class="flex-1 border-t border-green-300"></div>
                <div class="flex items-center text-green-600">
                    <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center text-white text-sm font-medium">✓</div>
                    <span class="ml-2 font-medium">Completado</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">

        <!-- Success Message -->
        @if (TempData["Success"] != null)
        {
            <div class="bg-gradient-to-r from-green-50 to-emerald-50 border border-green-200 rounded-xl p-6 mb-8">
                <div class="flex items-center">
                    <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-4">
                        <span class="text-green-600 font-bold text-lg">✓</span>
                    </div>
                    <div>
                        <h3 class="font-semibold text-green-800 mb-1">Éxito</h3>
                        <p class="text-green-700 text-sm">@TempData["Success"]</p>
                    </div>
                </div>
            </div>
        }

        <!-- Confirmation Card -->
        <div class="bg-white rounded-2xl shadow-xl border border-gray-100 mb-8 overflow-hidden">
            <div class="bg-gradient-to-r from-green-600 to-emerald-600 px-8 py-12 text-center">
                <!-- Success Icon -->
                <div class="w-20 h-20 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-6">
                    <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center">
                        <span class="text-green-600 text-2xl font-bold">✓</span>
                    </div>
                </div>

                <h2 class="text-3xl font-bold text-white mb-2">¡Felicitaciones!</h2>
                <p class="text-green-100 text-lg">Su voto ha sido registrado correctamente</p>
            </div>

            <div class="p-8">
                <div class="text-center mb-8">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">Su participación democrática es importante</h3>
                    <p class="text-gray-600 mb-6">
                        Gracias por ejercer su derecho al voto. Su elección ha sido registrada de forma segura
                        y confidencial en nuestro sistema electoral.
                    </p>
                </div>

                <!-- Information Cards -->
                <div class="grid md:grid-cols-2 gap-6 mb-8">
                    <!-- Security Card -->
                    <div class="bg-blue-50 rounded-lg p-6 border border-blue-200">
                        <div class="flex items-center mb-3">
                            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                                <span class="text-blue-600 font-bold text-sm">🔒</span>
                            </div>
                            <h4 class="font-semibold text-blue-800">Seguridad</h4>
                        </div>
                        <p class="text-blue-700 text-sm">
                            Su voto está protegido por sistemas de encriptación avanzada y
                            medidas de seguridad que garantizan la integridad del proceso.
                        </p>
                    </div>

                    <!-- Privacy Card -->
                    <div class="bg-purple-50 rounded-lg p-6 border border-purple-200">
                        <div class="flex items-center mb-3">
                            <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                                <span class="text-purple-600 font-bold text-sm">👁️</span>
                            </div>
                            <h4 class="font-semibold text-purple-800">Privacidad</h4>
                        </div>
                        <p class="text-purple-700 text-sm">
                            Su elección es completamente confidencial. Nadie puede acceder
                            a la información sobre su voto específico.
                        </p>
                    </div>
                </div>

                <!-- Next Steps -->
                <div class="bg-gradient-to-r from-gray-50 to-slate-50 rounded-lg p-6 border border-gray-200">
                    <h4 class="font-semibold text-gray-800 mb-3">¿Qué sigue ahora?</h4>
                    <div class="space-y-2 text-sm text-gray-600">
                        <div class="flex items-center">
                            <span class="w-2 h-2 bg-gray-400 rounded-full mr-3"></span>
                            <span>Los resultados serán publicados oficialmente al cierre de las votaciones</span>
                        </div>
                        <div class="flex items-center">
                            <span class="w-2 h-2 bg-gray-400 rounded-full mr-3"></span>
                            <span>Puede mantenerse informado a través de los canales oficiales</span>
                        </div>
                        <div class="flex items-center">
                            <span class="w-2 h-2 bg-gray-400 rounded-full mr-3"></span>
                            <span>Su participación contribuye al fortalecimiento de la democracia</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex justify-center space-x-4">
            <a asp-action="Index" asp-controller="Home"
               class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                🏠 Ir al Inicio
            </a>
        </div>

        <!-- Footer Message -->
        <div class="text-center mt-12 pt-8 border-t border-gray-200">
            <p class="text-gray-500 text-sm">
                Fecha y hora de registro: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")
            </p>
            <p class="text-gray-400 text-xs mt-2">
                Sistema Automatizado de Votaciones (SADVO) - Versión 1.0
            </p>
        </div>
    </div>
</div>

<!-- Print Styles -->
<style media="print">
    .no-print {
        display: none !important;
    }

    body {
        background: white !important;
    }

    .bg-gradient-to-br,
    .bg-gradient-to-r {
        background: white !important;
        color: black !important;
    }
</style>