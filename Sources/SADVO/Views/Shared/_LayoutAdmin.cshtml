@using SADVO.Core.Application.Helpers
@inject SADVO.Core.Application.Interfaces.IUserSession UserSession

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SADVO</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>
<body class="flex flex-col min-h-screen bg-white text-gray-800">

    <!-- Header -->
    <header class="border-b shadow-sm bg-white">
        <div class="container mx-auto px-4 py-3 flex justify-between items-center">
            <a asp-area="" asp-controller="Admin" asp-action="Index" class="text-xl font-semibold text-blue-600">
                SADVO - Administradores
            </a>

            <nav class="flex flex-wrap gap-3 items-center">
                <a asp-area="" asp-controller="PuestosElectivos" asp-action="Index"
                   class="px-4 py-2 text-sm text-gray-700 bg-gray-100 hover:bg-blue-500 hover:text-white rounded-md transition">
                    Puestos Electivos
                </a>
                <a asp-area="" asp-controller="Ciudadanos" asp-action="Index"
                   class="px-4 py-2 text-sm text-gray-700 bg-gray-100 hover:bg-blue-500 hover:text-white rounded-md transition">
                    Ciudadanos
                </a>
                <a asp-area="" asp-controller="PartidosPoliticos" asp-action="Index"
                   class="px-4 py-2 text-sm text-gray-700 bg-gray-100 hover:bg-blue-500 hover:text-white rounded-md transition">
                    Partidos Políticos
                </a>
                <a asp-area="" asp-controller="Usuarios" asp-action="Index"
                   class="px-4 py-2 text-sm text-gray-700 bg-gray-100 hover:bg-blue-500 hover:text-white rounded-md transition">
                    Usuarios
                </a>
                <a asp-area="" asp-controller="Auth" asp-action="Index"
                   class="px-4 py-2 text-sm text-gray-700 bg-gray-100 hover:bg-blue-500 hover:text-white rounded-md transition">
                    Dirigentes Políticos
                </a>
                <a asp-area="" asp-controller="Auth" asp-action="Index"
                   class="px-4 py-2 text-sm text-gray-700 bg-gray-100 hover:bg-blue-500 hover:text-white rounded-md transition">
                    Elecciones
                </a>
                    <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post" class="ml-3">
                        <button type="submit"
                                class="px-4 py-2 text-sm text-white bg-red-600 hover:bg-red-700 rounded-md transition">
                            Cerrar sesión
                        </button>
                    </form>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <main role="main" class="flex-grow container mx-auto px-4 py-8">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-t text-center text-sm text-gray-500 py-4">
        <div class="container mx-auto">
            &copy; @DateTime.Now.Year - SADVO
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
</body>
</html>
