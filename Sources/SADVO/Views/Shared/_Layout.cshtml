<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SADVO</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>
<body class="flex flex-col min-h-screen bg-white text-gray-800 drop-shadow-2xl">

    <!-- Header -->
    <header class="border-b bg-white">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="text-xl font-bold">SADVO</a>
            <nav class="space-x-6">
                <a asp-area="" asp-controller="Auth" asp-action="Index"
                   class="inline-block h-14 w-32 text-gray-700 bg-gray-100 hover:bg-blue-500 hover:text-white text-center leading-[3.5rem] rounded-md transition">
                    Inciar Sesion
                </a>
            </nav>

        </div>
    </header>

    <!-- Main Content -->
    <main role="main" class="flex-grow container mx-auto px-4 py-8">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-t text-center text-sm text-gray-500 py-4">
        <div class="container mx-auto">
            &copy; @DateTime.Now.Year - SADVO
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
</body>
</html>
